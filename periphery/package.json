{
  "name": "@magmaswap/periphery",
  "version": "1.0.1",
  "description": "Peripheral smart contracts for interacting with Magma Protocol",
  "license": "GPL-2.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "magmaswap",
    "periphery"
  ],
  "files": [
    "contracts/base",
    "contracts/interfaces",
    "contracts/libraries",
    "artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json",
    "!artifacts/contracts/test/**/*",
    "!artifacts/contracts/base/**/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "deploy": "hardhat run --network mantleTestnet scripts/deploy.ts",
    "init_pool": "hardhat run --network mantleTestnet scripts/init_pool.ts",
    "mint": "hardhat run --network mantleTestnet scripts/mint.ts",
    "verify": "hardhat run --network mantleTestnet scripts/verify.ts",
    "quote": "hardhat run --network mantleTestnet scripts/quoteV2.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@openzeppelin/contracts": "3.4.2-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "3.4.2-solc-0.7",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@uniswap/lib": "4.0.1-alpha",
    "@magmaswap/core": "^1.0.1",
    "hardhat": "^2.14.0",
    "dotenv": "^16.0.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "base64-sol": "1.1.0"
  }
}
